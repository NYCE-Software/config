{
    "name": "@nyce/config",
    "version": "3.2.0",
    "description": "Common configuration files used across projects.",
    "files": [
        "dist/**/*",
        "prettier.cjs",
        "eslint.cjs",
        "jest.cjs",
        ".swcrc",
        "tsconfig.json",
        "nodemon.json"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "start": "echo info: no start script for this package... no worries... this is normal",
        "build": "npx swc ./src -d dist --config jsc.baseUrl=/src",
        "prepare": "npm run build && npx tsc --declaration --emitDeclarationOnly",
        "prepublishOnly": "npm run lint",
        "preversion": "npm run lint",
        "lint": "eslint './src/**/*.ts' --ext .ts",
        "lint:fix": "eslint './src/**/*.ts' --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NYCE-Software/config.git"
    },
    "keywords": [
        "nyce",
        "software",
        "nyce-software",
        "nycesoftware",
        "config",
        "configuration"
    ],
    "prettier": "./prettier.cjs",
    "eslintConfig": {
        "extends": "./eslint.cjs"
    },
    "author": "NYCE Software",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/NYCE-Software/config/issues"
    },
    "homepage": "https://github.com/NYCE-Software/config#readme",
    "devDependencies": {
        "@swc/cli": "^0.1.63",
        "@swc/core": "^1.3.96",
        "@types/node": "^18.18.9",
        "@typescript-eslint/eslint-plugin": "^6.11.0",
        "@typescript-eslint/parser": "^6.11.0",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-no-secrets": "^0.8.9",
        "eslint-plugin-no-unsanitized": "^4.0.2",
        "eslint-plugin-pii": "^1.0.2",
        "eslint-plugin-regexp": "^2.1.1",
        "eslint-plugin-require-extensions": "^0.1.3",
        "eslint-plugin-xss": "^0.1.12",
        "prettier": "^3.1.0",
        "ts-jest": "^29.1.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.2.2"
    },
    "peerDependencies": {
        "@types/node": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-no-secrets": "^0.8.0",
        "eslint-plugin-no-unsanitized": "^4.0.0",
        "eslint-plugin-pii": "^1.0.0",
        "eslint-plugin-regexp": "^2.1",
        "eslint-plugin-xss": "^0.1.0",
        "eslint-plugin-require-extensions": "^0.1.3",
        "prettier": "^3.0.0",
        "shx": "^0.3",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "jest": "^29.7.0"
    }
}
